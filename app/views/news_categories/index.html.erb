<p id="notice"><%= notice %></p>
<h1>Categories</h1>
<%= link_to '+ New', new_news_category_path, class: "controls-link block" %>
<br>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @news_categories.each do |news_category| %>
      <tr>
        <td><%= news_category.name %></td>
        <td><%= link_to 'Show', news_category %></td>
        <td><%= link_to 'Edit', edit_news_category_path(news_category) %></td>
        <td><%= link_to 'Destroy', news_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
